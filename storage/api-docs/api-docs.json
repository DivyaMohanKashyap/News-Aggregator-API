    "components": {
        "schemas": {
            "ArticleResponse": {
                "title": "Article Resource",
                "description": "Represents an article in the news aggregator system.",
                "required": [
                    "id",
                    "title",
                    "slug",
                    "content",
                    "author",
                    "source",
                    "news_source",
                    "url",
                    "published_at"
                ],
                "properties": {
                    "id": {
                        "description": "Unique identifier for the article",
                        "type": "integer",
                        "default": "0"
                    },
                    "title": {
                        "description": "Title of the article",
                        "type": "string",
                        "default": "Test Article"
                    },
                    "slug": {
                        "description": "Slug for the article, used in URLs",
                        "type": "string",
                        "default": "test-article"
                    },
                    "content": {
                        "description": "Content of the article",
                        "type": "string",
                        "default": "This is a test article content."
                    },
                    "author": {
                        "description": "Author of the article",
                        "type": "string",
                        "default": "John Doe"
                    },
                    "source": {
                        "description": "Source of the article, e.g., The Hindu, BBC News, etc.",
                        "type": "string",
                        "default": "BBC News"
                    },
                    "news_source": {
                        "description": "Source of the article, e.g., News API, The Guardian, NYTimes",
                        "type": "string",
                        "default": "News API"
                    },
                    "url": {
                        "description": "URL of the article",
                        "type": "string",
                        "default": "https://example.com/test-article"
                    },
                    "published_at": {
                        "description": "Publication date and time of the article",
                        "type": "string",
                        "format": "date-time",
                        "default": "2023-10-01T12:00:00Z"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "ArticleResponse"
                }
            },
            "AuthResponse": {
                "title": "Authentication Response",
                "description": "Response structure for authentication endpoints.",
                "properties": {
                    "status": {
                        "description": "Class AuthController\nHandles user authentication and registration.",
                        "type": "boolean",
                        "example": true
                    },
                    "message": {
                        "type": "string",
                        "example": "User logged in successfully"
                    },
                    "token": {
                        "type": "string",
                        "example": "1|abcdefghij1234567890"
                    },
                    "data": {
                        "properties": {
                            "id": {
                                "type": "integer",
                                "example": 1
                            },
                            "name": {
                                "type": "string",
                                "example": "John Doe"
                            },
                            "email": {
                                "type": "string",
                                "example": "john@example.com"
                            },
                            "created_at": {
                                "type": "string",
                                "format": "date-time",
                                "example": "2025-07-29T12:00:00Z"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            },
            "sanctum": {
                "type": "http",
                "description": "Use the token provided after login to access protected routes.",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Articles",
            "description": "API Endpoints for managing articles"
        },
        {
            "name": "Auth",
            "description": "API Endpoints for user authentication and registration"
        },
        {
            "name": "Preferences",
            "description": "Preferences"
        }
    ]
}